@model ProductListViewModel

@{
    ViewBag.Title = "List Product";
}
<h1 class="text-3xl font-bold underline text-sky-400">
    Hello world!
</h1>

@foreach (var product in Model.Products)
{
    <div>
        <h2> @product.Name </h2>
        <p>@product.Description</p>
        <p>@product.Price</p>
    </div>
}